{
    "extends": [
        "tslint:all"
    ],
    "rules": {
        "typedef": false,
        "member-access": false,
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "curly": false,
        "object-literal-sort-keys": false,
        "interface-name": [
            true,
            "never-prefix"
        ],
        "only-arrow-functions": false
    }
}
